<h1>新規追加</h1>
<%= form_with model: @bookmark do |f| %>
  <%= f.label :title, 'タイトル' %>
  <%= f.text_field :title %>
  <%= f.label :url, 'URL' %>
  <%= f.text_field :url %>
  <%= f.label :name, '著者名' %>
  <%= f.text_field :name %>
  <%= f.submit '登録' %>
<% end %>

<% if @bookmark.errors.present? %>
  <h3>エラーがあります。</h3>
  <ul>
    <% @bookmark.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>