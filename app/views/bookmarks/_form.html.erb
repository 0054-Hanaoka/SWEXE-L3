<%= form_with(model: bookmark) do |f| %>
  <% if bookmark.errors.present? %>
    <div id="error_explanation">
      <h3>エラーがあります。</h3>
      <ul>
        <% bookmark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :url, "URL" %><br>
    <%= f.text_field :url %>
  </div>

  <div>
    <%= f.label :name, "著者名" %><br>
    <%= f.text_field :name %>
  </div>

  <div style="margin-top: 10px;">
    <%= f.submit bookmark.persisted? ? "更新" : "登録", class: "btn btn-primary" %>
  </div>
<% end %>
